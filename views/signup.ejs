<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/styles.css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <title>Login Page</title>
</head>
<body>
    <div class="container">
        <div class="row justify-content-center mt-5">
            <div class="col-md-4 mt-5">
                <div class="card mt-5">
                    <div class="card-header bg-success">
                        <h2 class="text-center">Sign UP</h2>
                    </div>
                    <div class="card-body">
                        <form onsubmit="return validation()" action="/signup" method="POST">
                            <div class="form-group">
                                <label for="username">Username:</label>
                                <input type="text" class="form-control" id="username" name="username" >
                                <p id="uname"></p>
                            </div>
                            <div class="form-group">
                                <label for="password">Password:</label>
                                <input type="password" class="form-control" id="password" name="password">
                                <p id="pass"></p>

                            </div>
                            <button type="submit" class="btn btn-primary btn-block mt-4">Sign Up</button>


                        

                        </form>
                            <form action="/" method="GET">
                                <button type="submit" class="btn btn-primary btn-block mt-4">Login</button>


                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        function validation() {
            const uname = document.getElementById('username');
            const name = uname.value;
            const errorname = document.getElementById('uname');
            const pss = document.getElementById('password');
            const pwr = pss.value;
            const errorpass = document.getElementById('pass');

            if (name === '') {
                errorname.innerHTML = 'Enter a username';
                return false;
            } else if (name.length < 5) {
                errorname.innerHTML = 'Username must be at least 5 characters long';
                return false;
            } else {
                errorname.innerHTML = '';
            }

            if (pwr === '') {
                errorpass.innerHTML = 'Enter a password';
                return false;
            } else if (pwr.length < 8) {
                errorpass.innerHTML = 'Password must be at least 8 characters long';
                return false;
            } else if (!/\d/.test(pwr)) {
                errorpass.innerHTML = 'Password must be 8 digit digit';
                return false;
            }  else {
                errorpass.innerHTML = '';
                return true;
            }
        }
    </script>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.1/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
